<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<!DOCTYPE html>
<html>
  <head>
    <title>EventBrite</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/minty/bootstrap.min.css" integrity="sha384-H4X+4tKc7b8s4GoMrylmy2ssQYpDHoqzPa9aKXbDwPoPUA3Ra8PA5dGzijN+ePnH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    
  </head>

  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" <%= link_to "Event Brite", root_path %></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link active" <%= link_to "Créé ton event", new_event_path %> </a>
        </li>
     

         <% if user_signed_in? %> 
        
        <li class="nav-item">
          <a class="nav-link" href="#"> <%= current_user.email %> </a> <%end%>
        </li>
        <% if user_signed_in? %> 
        <li class="nav-item">
          <a class="nav-link" <%= link_to "Page profil", user_path(current_user.id)%></a><%end%>
        </li>
        </li>
        <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">S'inscrire / se connecter </a>
          <div class="dropdown-menu">
          <a class="dropdown-item" <%= link_to "S'inscire", new_user_registration_path %></a>
          <a class="dropdown-item" <%= link_to "Se connecter", new_user_session_path %></a>
          
          <% if user_signed_in? %> 
            <a class="dropdown-item" <%= link_to 'Se déconnecter', destroy_user_session_path, :method => :delete %> 
            </a>

            <div class="dropdown-divider"></div>
            <a class="dropdown-item" <%= link_to "Modifier mes infos", edit_user_registration_path %></a><%end%>
          </div>
        </li>
      </ul>
      
    </div>
  </div>
</nav>

  <body>
  <div class="jumbotron">
  <div class="container-fluid">
  </div>
  </div>



    <%= yield %>
  </body>
</html>
